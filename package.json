{
  "name": "bobby-ai-pet",
  "version": "1.0.0",
  "description": "A delightful AI desktop companion that brings personality to your workspace",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/bobby-ai-pet",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "desktop-pet",
    "ai",
    "companion",
    "interactive",
    "animation",
    "javascript"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist-all": "electron-builder --win --mac --linux --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yourname.bobby-ai-pet",
    "productName": "Bobby AI Pet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "sign": null
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3"
  }
}
